# Production Environment Variables for Wheeler Knight Portfolio
# Copy this file to .env.prod and update the values

# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=wheelerknight_portfolio_prod
MYSQL_USER=wheelerknight_prod
MYSQL_PASSWORD=your_secure_db_password_here

# Flask Configuration
SECRET_KEY=your_very_long_and_secure_secret_key_here_at_least_32_characters
JWT_SECRET_KEY=your_jwt_secret_key_here_different_from_secret_key
FLASK_ENV=production
FLASK_DEBUG=False

# CORS Configuration
CORS_ORIGINS=https://wheelerknight.com,https://www.wheelerknight.com

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_USE_TLS=True

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_FOLDER=uploads/

# Frontend Configuration
REACT_APP_API_URL=https://wheelerknight.com/api
REACT_APP_ENVIRONMENT=production
REACT_APP_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
REACT_APP_EMAILJS_SERVICE_ID=your_emailjs_service_id
REACT_APP_EMAILJS_TEMPLATE_ID=your_emailjs_template_id
REACT_APP_EMAILJS_PUBLIC_KEY=your_emailjs_public_key

# Security Configuration
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Domain Configuration
DOMAIN_NAME=wheelerknight.com
WWW_DOMAIN=www.wheelerknight.com

# CDN Configuration (Optional)
CDN_URL=https://cdn.wheelerknight.com
CDN_ENABLED=False

# Cache Configuration
REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=120
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
